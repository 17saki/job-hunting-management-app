<div class="toolbar">
  <!-- 並び替えボタン -->
  <button id="sort-btn" class="icon-btn">⇅</button>

  <!-- 検索フォーム -->
  <input type="text" id="search-input" placeholder="絞り込み">
  <button id="search-btn">検索</button>

  <!-- 追加ボタン -->
  <%= link_to "+", new_company_path, class: "icon-btn" %>
</div>

<div class="company-list">
  <% if @companies.present? %>
    <% @companies.each do |company| %>
      <div class="company-card">
        <div class="status">
          <span class="type"><%= company.selection_type %></span>
          <span class="state <%= company.state_class %>"><%= company.state %></span>
        </div>
        <div class="details">
          <%= link_to company.name, company_path(company), class: "company-link" %>
          <p><%= company.date_c %> <%= company.time_range %></p>
          <p><%= company.schedule %></p>
          <p class="priority">志望度 <%= company.interest %></p>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>会社情報がありません</p>
  <% end %>
</div>
